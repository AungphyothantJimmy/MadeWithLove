@model MadeWithLove.Models.Product
@using MadeWithLove.Data.Enum

@{
    ViewData["Title"] = "Add New Product";
}

<div class="container py-4">
    <h2 class="mb-4 text-center text-primary">@ViewData["Title"]</h2>

    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label asp-for="ProductName" class="form-label"></label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ProductDescription" class="form-label"></label>
            <textarea asp-for="ProductDescription" class="form-control" rows="3"></textarea>
            <span asp-validation-for="ProductDescription" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageURL" class="form-label"></label>
            <input asp-for="ImageURL" class="form-control" />
            <span asp-validation-for="ImageURL" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ProductPrice" class="form-label"></label>
            <input asp-for="ProductPrice" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="ProductPrice" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ProductCategory" class="form-label"></label>
            <select asp-for="ProductCategory" class="form-select" asp-items="Html.GetEnumSelectList<ProductCategory>()">
                <option value="">-- Select Category --</option>
            </select>
            <span asp-validation-for="ProductCategory" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsOnSale" class="form-check-input" />
            <label asp-for="IsOnSale" class="form-check-label"></label>
        </div>

        <button type="submit" class="btn btn-success w-100">
            <i class="bi bi-plus-circle"></i> Add Product
        </button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}